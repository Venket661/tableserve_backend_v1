{
  "name": "tableserve-backend",
  "version": "1.0.0",
  "description": "TableServe Backend API - Multi-tenant QR-based restaurant ordering platform",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "start:production": "node production-server.js",
    "start:cluster": "NODE_ENV=production node production-server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:load": "artillery run tests/load/artillery.yml",
    "test:load:production": "TARGET_URL=https://api.tableserve.app artillery run tests/load/artillery.yml",
    "test:performance": "npm run test:load && npm run test:unit && npm run test:integration",
    "test:smoke": "jest --testPathPattern=tests/smoke --forceExit",
    "test:e2e": "jest --testPathPattern=tests/e2e --runInBand",
    "test:security": "npm audit && npm run test:unit -- --testNamePattern='security'",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "seed": "node src/utils/seedData.js",
    "build": "echo 'Backend build complete'",
    "health-check": "curl -f http://localhost:8080/health || exit 1",
    "test:connectivity": "node test-connectivity.js",
    "validate-env": "node -e 'require(\"./src/utils/validateEnv.js\")',",
    "format": "prettier --write \"**/*.{js,json,md}\""
  },
  "keywords": [
    "restaurant",
    "qr-code",
    "ordering-system",
    "multi-tenant",
    "express",
    "mongodb",
    "nodejs"
  ],
  "author": "TableServe Team",
  "license": "MIT",
  "type": "commonjs",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "bcryptjs": "^3.0.2",
    "chart.js": "^4.5.0",
    "cloudinary": "^1.41.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.4.5",
    "exceljs": "^4.4.0",
    "express": "^4.18.3",
    "express-rate-limit": "^6.11.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "joi": "^17.12.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.2.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.12",
    "path-to-regexp": "^6.2.1",
    "pdfkit": "^0.14.0",
    "qrcode": "^1.5.4",
    "rate-limit-redis": "^3.0.2",
    "razorpay": "^2.9.6",
    "react-chartjs-2": "^5.3.0",
    "redis": "^5.8.2",
    "socket.io": "^4.7.4",
    "winston": "^3.12.0"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "mongodb-memory-server": "^9.1.6",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "supertest": "^6.3.4"
  }
}
